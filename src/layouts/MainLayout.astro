---
import BaseHead from "../components/BaseHead.astro";
import HeaderLink from "../components/HeaderLink.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

interface Props {
  showNav?: boolean;
  title: string;
  docTitle?: string;
  docDescription?: string;
}

const { docTitle, docDescription, title, showNav } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={docTitle ?? SITE_TITLE}
      description={docDescription ?? SITE_DESCRIPTION}
    />
  </head>
  <body class="min-h-screen w-screen py-32 bg-white">
    <div class="px-8 lg:px-0 lg:max-w-prose mx-auto">
      <div class="flex flex-col gap-4">
        <h1>{title}</h1>
        {
          showNav && (
            <nav class="w-full flex flex-row gap-2">
              <HeaderLink href="/">About</HeaderLink>
              <HeaderLink href="/blog">Blog</HeaderLink>
            </nav>
          )
        }
      </div>
      <hr class="border-slate-200 my-12" />
      <main><slot /></main>
    </div>
  </body>
</html>
