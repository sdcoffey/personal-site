---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"time"> & {
  date: Date;
};

const { date, class: className } = Astro.props;
---

<time datetime={date.toISOString()} class={className}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
